<?xml version="1.0" ?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xmlns="http://schemas.sulu.io/template/template"
      xsi:schemaLocation="http://schemas.sulu.io/template/template http://schemas.sulu.io/template/form-1.0.xsd"
>
    <key>event_settings_calendar</key>

    <properties>

        <!-- Calendar Settings -->
        <section name="calendar-settings">
            <meta>
                <title>sulu_event.config.title.calendar_basic</title>
            </meta>
            <properties>

                <property name="calendarStartDay" type="single_select" colspan="4">
                    <meta>
                        <title>sulu_event.config.properties.calendar_start_day</title>
                        <info_text>sulu_event.config.properties.calendar_start_day_info</info_text>
                    </meta>
                    <params>
                        <param name="default_value" value="1"/>
                        <param name="values" type="collection">
                            <param name="0">
                                <meta>
                                    <title>sulu_event.config.weekday.sunday</title>
                                </meta>
                            </param>
                            <param name="1">
                                <meta>
                                    <title>sulu_event.config.weekday.monday</title>
                                </meta>
                            </param>
                        </param>
                    </params>
                </property>

                <property name="showCalendarEventTime" type="checkbox" colspan="4">
                    <meta>
                        <title>sulu_event.config.properties.show_calendar_event_time</title>
                        <info_text>sulu_event.config.properties.show_calendar_event_time_info</info_text>
                    </meta>
                    <params>
                        <param name="type" value="toggler"/>
                        <param name="default_value" value="true"/>
                    </params>
                </property>

                <property name="showCalendarWeekNumbers" type="checkbox" colspan="4">
                    <meta>
                        <title>sulu_event.config.properties.show_calendar_week_numbers</title>
                        <info_text>sulu_event.config.properties.show_calendar_week_numbers_info</info_text>
                    </meta>
                    <params>
                        <param name="type" value="toggler"/>
                    </params>
                </property>

                <property name="showCalendarWeekends" type="checkbox" colspan="4">
                    <meta>
                        <title>sulu_event.config.properties.show_calendar_weekends</title>
                        <info_text>sulu_event.config.properties.show_calendar_weekends_info</info_text>
                    </meta>
                    <params>
                        <param name="type" value="toggler"/>
                        <param name="default_value" value="true"/>
                    </params>
                </property>

            </properties>
        </section>


        <section name="calendar-events">
            <meta>
                <title>sulu_event.config.title.calendar_events</title>
            </meta>
            <properties>
                <property name="eventLimitPerDay" type="number" colspan="4">
                    <meta>
                        <title>sulu_event.config.properties.event_limit_per_day</title>
                        <info_text>sulu_event.config.properties.event_limit_per_day_info</info_text>
                    </meta>
                </property>

                <property name="limitToEventRange" type="checkbox" colspan="4">
                    <meta>
                        <title>sulu_event.config.properties.limit_to_event_range</title>
                        <info_text>sulu_event.config.properties.limit_to_event_range_info</info_text>
                    </meta>
                    <params>
                        <param name="type" value="toggler"/>
                        <param name="default_value" value="true"/>
                    </params>
                </property>

                <property name="showCalendarEventLocation" type="checkbox" colspan="4">
                    <meta>
                        <title>sulu_event.config.properties.show_calendar_event_location</title>
                        <info_text>sulu_event.config.properties.show_calendar_event_location_info</info_text>
                    </meta>
                    <params>
                        <param name="type" value="toggler"/>
                    </params>
                </property>

                <property name="eventColor" type="color" colspan="4">
                    <meta>
                        <title>sulu_event.config.properties.event_color</title>
                        <info_text>sulu_event.config.properties.event_color_info</info_text>
                    </meta>
                </property>

            </properties>
        </section>


        <section name="calendar-display">
            <meta>
                <title>sulu_event.config.title.calendar_display</title>
            </meta>
            <properties>

                <property name="toggleCalendarView" type="checkbox" colspan="4">
                    <meta>
                        <title>sulu_event.config.properties.toggle_calendar_view</title>
                        <info_text>sulu_event.config.properties.toggle_calendar_view_info</info_text>
                    </meta>
                    <params>
                        <param name="type" value="toggler"/>
                        <param name="default_value" value="true"/>
                    </params>
                </property>

                <property name="allowedCalenderViews" type="select" colspan="4" visibleCondition="__parent.toggleCalendarView">
                    <meta>
                        <title>sulu_event.config.properties.allowed_calender_views</title>
                        <info_text>sulu_event.config.properties.allowed_calendar_views_info</info_text>
                    </meta>
                    <params>
                        <param name="default_values" type="collection">
                            <param name="listWeek"/>
                            <param name="listMonth"/>
                        </param>

                        <param name="values" type="collection">
                            <param name="dayGridMonth">
                                <meta>
                                    <title lang="en">Month Grid</title>
                                    <title lang="de">Monatsraster</title>
                                </meta>
                            </param>
                            <param name="timeGridWeek">
                                <meta>
                                    <title lang="en">Week with Times</title>
                                    <title lang="de">Woche mit Uhrzeiten</title>
                                </meta>
                            </param>
                            <param name="listWeek">
                                <meta>
                                    <title lang="en">Week List</title>
                                    <title lang="de">Wochenliste</title>
                                </meta>
                            </param>
                            <param name="listMonth">
                                <meta>
                                    <title lang="en">Month List</title>
                                    <title lang="de">Monatsliste</title>
                                </meta>
                            </param>
                            <param name="multiMonthYear">
                                <meta>
                                    <title lang="en">Year Overview (4 Monate)</title>
                                    <title lang="de">Jahres√ºbersicht (4 Monate)</title>
                                </meta>
                            </param>
                        </param>
                    </params>
                </property>

            </properties>
        </section>

    </properties>
</form>