<?xml version="1.0" ?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xmlns="http://schemas.sulu.io/template/template"
      xsi:schemaLocation="http://schemas.sulu.io/template/template http://schemas.sulu.io/template/form-1.0.xsd"
>
    <key>event_settings_general</key>

    <properties>
        <!-- General Display Settings -->
        <section name="general-display">
            <meta>
                <title>sulu_event.config.title.general</title>
            </meta>
            <properties>
                <property name="toggleHeader" type="checkbox" colspan="3">
                    <meta>
                        <title>sulu_event.config.properties.toggle_header</title>
                        <info_text>sulu_event.config.properties.toggle_header_info</info_text>
                    </meta>
                    <params>
                        <param name="type" value="toggler"/>
                        <param name="default_value" value="true"/>
                    </params>
                </property>

                <property name="toggleHero" type="checkbox" colspan="3">
                    <meta>
                        <title>sulu_event.config.properties.toggle_hero</title>
                        <info_text>sulu_event.config.properties.toggle_hero_info</info_text>
                    </meta>
                    <params>
                        <param name="type" value="toggler"/>
                        <param name="default_value" value="true"/>
                    </params>
                </property>

                <property name="toggleBreadcrumbs" type="checkbox" colspan="3" spaceAfter="3">
                    <meta>
                        <title>sulu_event.config.properties.toggle_breadcrumbs</title>
                        <info_text>sulu_event.config.properties.toggle_breadcrumbs_info</info_text>
                    </meta>
                    <params>
                        <param name="type" value="toggler"/>
                        <param name="default_value" value="true"/>
                    </params>
                </property>

                <property name="toggleTags" type="checkbox" colspan="3">
                    <meta>
                        <title>sulu_event.config.properties.toggle_tags</title>
                        <info_text>sulu_event.config.properties.toggle_tags_info</info_text>
                    </meta>
                    <params>
                        <param name="type" value="toggler"/>
                        <param name="default_value" value="false"/>
                    </params>
                </property>

                <property name="tagsColor" type="color_select" colspan="3" visibleCondition="__parent.toggleTags == true">
                    <meta>
                        <title>sulu_event.config.properties.toggle_tags_color</title>
                        <info_text>sulu_event.config.properties.toggle_tags_color_info</info_text>
                    </meta>
                    <params>
                        <param name="default_value"
                               type="expression"
                               value="service('sulu_content_types.color_palette_provider').getDefaultValue('bootstrap_emphasis')"
                        />
                        <param name="values"
                               type="expression"
                               value="service('sulu_content_types.color_palette_provider').getValues('bootstrap_emphasis')"
                        />
                    </params>
                </property>

                <property name="toggleCategories" type="checkbox" colspan="3">
                    <meta>
                        <title>sulu_event.config.properties.toggle_categories</title>
                        <info_text>sulu_event.config.properties.toggle_categories_info</info_text>
                    </meta>
                    <params>
                        <param name="type" value="toggler"/>
                        <param name="default_value" value="false"/>
                    </params>
                </property>

                <property name="categoriesColor" type="color_select" colspan="3" visibleCondition="__parent.toggleCategories == true">
                    <meta>
                        <title>sulu_event.config.properties.toggle_categories_color</title>
                        <info_text>sulu_event.config.properties.toggle_categories_color_info</info_text>
                    </meta>
                    <params>
                        <param name="default_value"
                               type="expression"
                               value="service('sulu_content_types.color_palette_provider').getDefaultValue('bootstrap_emphasis')"
                        />
                        <param name="values"
                               type="expression"
                               value="service('sulu_content_types.color_palette_provider').getValues('bootstrap_emphasis')"
                        />
                    </params>
                </property>
            </properties>
        </section>
        <section name="general-list">
            <meta>
                <title>sulu_event.config.title.list_view</title>
            </meta>
            <properties>
                <property name="toggleFeedRss" type="checkbox" colspan="3">
                    <meta>
                        <title>sulu_event.config.properties.toggle_feed_rss</title>
                        <info_text>sulu_event.config.properties.toggle_feed_rss_info</info_text>
                    </meta>
                    <params>
                        <param name="type" value="toggler"/>
                        <param name="default_value" value="false"/>
                    </params>
                </property>
                <property name="toggleFeedAtom" type="checkbox" colspan="3">
                    <meta>
                        <title>sulu_event.config.properties.toggle_feed_atom</title>
                        <info_text>sulu_event.config.properties.toggle_feed_atom_info</info_text>
                    </meta>
                    <params>
                        <param name="type" value="toggler"/>
                        <param name="default_value" value="false"/>
                    </params>
                </property>
                <property name="toggleIcal" type="checkbox" colspan="3">
                    <meta>
                        <title>sulu_event.config.properties.toggle_ical</title>
                        <info_text>sulu_event.config.properties.toggle_ical_info</info_text>
                    </meta>
                    <params>
                        <param name="type" value="toggler"/>
                        <param name="default_value" value="false"/>
                    </params>
                </property>
            </properties>
        </section>

    </properties>
</form>