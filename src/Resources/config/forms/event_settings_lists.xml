<?xml version="1.0" ?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xmlns="http://schemas.sulu.io/template/template"
      xsi:schemaLocation="http://schemas.sulu.io/template/template http://schemas.sulu.io/template/form-1.0.xsd"
>
    <key>event_settings_lists</key>

    <properties>
        <!-- List View Settings -->
        <section name="list-settings">
            <meta>
                <title>sulu_event.config.title.list_view</title>
            </meta>
            <properties>
                <property name="eventsPerPage" type="text_line" colspan="6">
                    <meta>
                        <title>sulu_event.config.properties.events_per_page</title>
                    </meta>
                    <params>
                        <param name="default_value" value="12"/>
                        <param name="pattern" value="^\d+$"/>
                    </params>
                </property>

                <property name="defaultSortOrder" type="single_select" colspan="6">
                    <meta>
                        <title>sulu_event.config.properties.default_sort_order</title>
                    </meta>
                    <params>
                        <param name="default_value" value="start_date_asc"/>
                        <param name="values" type="collection">
                            <param name="start_date_asc">
                                <meta>
                                    <title>sulu_event.config.sort_order.start_date_asc</title>
                                </meta>
                            </param>
                            <param name="start_date_desc">
                                <meta>
                                    <title>sulu_event.config.sort_order.start_date_desc</title>
                                </meta>
                            </param>
                            <param name="title_asc">
                                <meta>
                                    <title>sulu_event.config.sort_order.title_asc</title>
                                </meta>
                            </param>
                            <param name="title_desc">
                                <meta>
                                    <title>sulu_event.config.sort_order.title_desc</title>
                                </meta>
                            </param>
                        </param>
                    </params>
                </property>

                <property name="showEventImages" type="checkbox" colspan="6">
                    <meta>
                        <title>sulu_event.config.properties.show_event_images</title>
                    </meta>
                    <params>
                        <param name="type" value="toggler"/>
                        <param name="default_value" value="true"/>
                    </params>
                </property>

                <property name="showEventSummary" type="checkbox" colspan="6">
                    <meta>
                        <title>sulu_event.config.properties.show_event_summary</title>
                    </meta>
                    <params>
                        <param name="type" value="toggler"/>
                        <param name="default_value" value="true"/>
                    </params>
                </property>
            </properties>
        </section>

    </properties>
</form>